<?xml version="1.0" encoding="utf-8"?>
<odoo>   
    <record id="bureau_ordre_action_form" model="ir.actions.act_window">
        <field name="name">Registre d'arrivée</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bureau.ordre.document.arrivee</field>
        <field name="view_mode">tree,form</field>

    </record>

    
    
    <record id="bureau_ordre_view_form" model="ir.ui.view">
        <field name="name">Registre Arrivée Form</field>
        <field name="model">bureau.ordre.document.arrivee</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_en_traitment" string="passer au traitement" type="object" attrs="{'invisible': [('etat', '!=', 'recu')]}"/>
                    <button name="action_finish" string="terminer" type="object" attrs="{'invisible': [('etat', '!=', 'en_cours')]}"/>
                    <button name="action_modifier" string="modifier" type="object"  attrs="{'invisible': [('etat', '!=', 'termine')]}"/>
                    <button string="Archive" type="object" name="action_custom_archive" attrs="{'invisible': [('etat', '!=', 'termine')]}"/>
                    <field name="etat" widget="statusbar" nolabel="1" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="num_arrivee"  readonly="1"/>
                            <field name="date_arrivee" attrs="{'readonly': [('etat', 'in', ['termine', 'aarchived'])]}"/>

                        </group>
                        <group>
                            <field name="destinataire" attrs="{'readonly': [('etat', 'in', ['termine', 'aarchived'])]}"/>
                            <field name="objet_de_correspondance" attrs="{'readonly': [('etat', 'in', ['termine', 'aarchived'])]}"/>
                        </group>
                        <group>
                            <field name="piece_jointe" attrs="{'readonly': [('etat', 'in', ['termine', 'aarchived'])]}"/>
                            <field name="expediteur" attrs="{'readonly': [('etat', 'in', ['termine', 'aarchived'])]}"/>
                        </group>
                        <group>
                            <group>
                            <!-- Field "demande" as a checkbox -->
                                <field name="demande" widget="boolean_checkbox" attrs="{'readonly': [('etat', 'in', ['termine', 'aarchived'])]}"/>
                            </group>
                            <group>
                                <field name="reference_expediteur" attrs="{'required': [('demande', '=', True)], 'invisible': [('demande', '=', False)]}"/>
                            </group>
                        </group>
                        
                        <group>
                            
                        <field name="pdf_file" attrs="{'required': [('etat', '=', 'en_cours')], 'readonly': [('etat', '=', 'termine'), ('etat', '=', 'aarchived')], 'invisible': [('etat', '=', 'recu')]}" />

                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="bureau_ordre_view_list" model="ir.ui.view">
        <field name="name">Registre Arrivée list</field>
        <field name="model">bureau.ordre.document.arrivee</field>
        <field name="arch" type="xml">
            <tree decoration-success="etat=='termine'" decoration-info="etat=='recu'" decoration-warning="etat=='en_cours'" delete="0">
                <field name="num_arrivee"/>
                <field name="date_arrivee"/>
                <field name="destinataire"/>
                <field name="objet_de_correspondance"/>
                <field name="piece_jointe"/>
                <field name="expediteur"/>
                <field name="reference_expediteur"/>
                
                <field name="etat"
                        decoration-success="etat=='termine'"
                        decoration-info="etat=='recu'"
                        decoration-warning="etat=='en_cours'"
                        widget="badge"
                        optional="show"
                        />
                
                <field name="pdf_file" filename="your_filename.pdf" widget="pdf" options="{'readonly': True}" attrs="{'invisible': [('etat', '!=', 'en_cours'),('etat', '!=', 'termine')]}" />
                

            </tree>
        </field>
    </record>

    <record id="bureau_ordre_view_search" model="ir.ui.view">
        <field name="name">Registre Arrivée search</field>
        <field name="model">bureau.ordre.document.arrivee</field>
        <field name="arch" type="xml">
            <search>
            <field name="num_arrivee"/>
            <field name="date_arrivee"/>
            <field name="destinataire"/>
            <field name="objet_de_correspondance"/>
            <field name="piece_jointe"/>
            <field name="expediteur"/>
            <field name="reference_expediteur"/>
            <filter string="state recu" name="filter_state_recu" domain="[('etat', '=', 'recu')]"/>
            <filter string="state en cours" name="filter_state_en_cours" domain="[('etat', '=', 'en_cours')]"/>
            <filter string="state terminé" name="filter_termine" domain="[('etat', '=', 'termine')]"/>
            <filter string="Archived" name="archived" domain="[('etat','=','aarchived')]"/>
            <filter string="Date d'arrivée" name="date_arrivee"/>
            <group expand="0" string="Group By">
                <filter string="Group by Date Arrivée" name="group_by_date_arrivee" context="{'group_by':'date_arrivee'}"/>
            </group>
            </search>
        </field>
    </record>
</odoo>



