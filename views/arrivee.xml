<?xml version="1.0" encoding="utf-8"?>
<odoo>   
    <record id="bureau_ordre_action_form" model="ir.actions.act_window">
        <field name="name">Bureau ordre</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bureau.ordre.document</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="ordre_main_menu"
            name="Bureau ordre"/>
    
    <menuitem id="bureau_ordre_menu"
            name="Registre Arrivee"
            parent="ordre_main_menu"
            action="bureau_ordre_action_form"/>

    <record id="bureau_ordre_view_form" model="ir.ui.view">
        <field name="name">bureau ordre registre Form</field>
        <field name="model">bureau.ordre.document</field>
        <field name="arch" type="xml">
            <form> 
                    <group>
                        <field name="name"/>
                        <field name="date_reception"/>
                        <field name="etat"/>
                    </group>
                </form>
        </field>
    </record>
    <!--Tree(list) View-->
    <record id="bureau_ordre_view_list" model="ir.ui.view">
        <field name="name">bureau ordre registre list</field>
        <field name="model">bureau.ordre.document</field>
        <field name="arch" type="xml">
             <tree>
                    <field name="name"/>
                    <field name="date_reception"/>
                    <field name="etat"/>
             </tree>
        </field>
    </record>
    
</odoo>

