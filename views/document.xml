<?xml version="1.0" encoding="utf-8"?>
<odoo>   
    <record id="bureau_ordre_document_action_form" model="ir.actions.act_window">
        <field name="name">Document</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bureau.ordre.document</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="ordre_main_menu" name="Bureau ordre"/>
    
    <menuitem id="bureau_ordre_document_menu"
            name="Document"
            parent="ordre_main_menu"
            action="bureau_ordre_document_action_form"/>

    <record id="bureau_ordre_document_view_form" model="ir.ui.view">
        <field name="name">Document Form</field>
        <field name="model">bureau.ordre.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <!-- Champ "nom" -->
                        <field name="nom"/>
                        <field name="pdf_file" widget="binary" filename="nom"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree (list) View -->
    <record id="bureau_ordre_document_view_list" model="ir.ui.view">
        <field name="name">Document list</field>
        <field name="model">bureau.ordre.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom"/>
            </tree>
        </field>
    </record>

    <!--Search-->
    <record id="bureau_ordre_document_view_search" model="ir.ui.view">
        <field name="name">Document Search</field>
        <field name="model">bureau.ordre.document</field>
        <field name="arch" type="xml">
            <search>
                <group expand="0" string="Group By">
                    <filter string="Nom" name="nom" context="{'group_by': 'nom'}"/>
                </group>
                <field name="nom"/>
            </search>
        </field>
    </record>
</odoo>
