<?xml version="1.0" encoding="utf-8"?>
<odoo>   
    <record id="bureau_ordre_service_action_form" model="ir.actions.act_window">
        <field name="name">Service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bureau.ordre.service</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="ordre_main_menu" name="Bureau ordre"/>
    
    <!-- <menuitem id="bureau_ordre_service_menu"
            name="Service"
            parent="ordre_main_menu"
            action="bureau_ordre_service_action_form"/> -->

    <record id="bureau_ordre_service_view_form" model="ir.ui.view">
        <field name="name">Service Form</field>
        <field name="model">bureau.ordre.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <!-- Image field -->
                        <field name="image" widget="image" options="{'size': (120, 120)}"/>
                    </header>
                    <group>
                        <!-- Champ "nom" -->
                        <field name="nom"/>
                        
                    </group>
                    <group>
                        <field name="date_release" string="Le: "/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree (list) View -->
    <record id="bureau_ordre_service_view_list" model="ir.ui.view">
        <field name="name">Service list</field>
        <field name="model">bureau.ordre.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image" widget="image" options="{'size': (50, 50)}"/>
                <field name="nom"/>
                <field name="date_release" string="Date de release"/>
            </tree>
        </field>
    </record>

    <!--Search-->
    <record id="bureau_ordre_service_view_search" model="ir.ui.view">
        <field name="name">Service Search</field>
        <field name="model">bureau.ordre.service</field>
        <field name="arch" type="xml">
            <search>
                <group expand="0" string="Group By">
                    <filter string="Nom" name="nom" context="{'group_by': 'nom'}"/>
                    <filter string="Date de release" name="date_release" context="{'group_by': 'date_release'}"/>
                </group>
                <field name="nom"/>
                <filter string="Date de release" name="date_release"/>
            </search>
        </field>
    </record>
</odoo>
