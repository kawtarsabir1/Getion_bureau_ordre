<?xml version="1.0" encoding="utf-8"?>
<odoo>   
    <record id="bureau_ordre_service_action_form" model="ir.actions.act_window">
        <field name="name">Service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bureau.ordre.service</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="ordre_main_menu" name="Bureau ordre"/>
    
    <menuitem id="bureau_ordre_service_menu"
            name="Service"
            parent="ordre_main_menu"
            action="bureau_ordre_service_action_form"/>

    <record id="bureau_ordre_service_view_form" model="ir.ui.view">
        <field name="name">Service Form</field>
        <field name="model">bureau.ordre.service</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <!-- Champ "nom" -->
                    <field name="nom"/>
                </group>
            </form>
        </field>
    </record>
    <!-- Tree (list) View -->
    <record id="bureau_ordre_service_view_list" model="ir.ui.view">
        <field name="name">Service list</field>
        <field name="model">bureau.ordre.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom"/>
            </tree>
        </field>
    </record>
</odoo>
